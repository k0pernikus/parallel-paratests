{
  "name": "kopernikus/parallel-paratests",
  "require": {},
  "authors": [
    {
      "name": "Philipp Kretzschmar",
      "email": "philipp.kretzschmar@gmail.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "brianium/paratest": "^7.12"
  },
  "autoload": {
    "psr-4": {
      "Kopernikus\\ParallelParatests\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kopernikus\\ParallelParatests\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests:parallel": "bash -c \"shopt -s globstar; paratest ./tests/**/*.php --functional\""
  }
}